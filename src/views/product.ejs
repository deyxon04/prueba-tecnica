                        <form action="/product" method="POST" class="text-center border border-light p-5">
                            <!-- nombre -->
                            <input type="text" id="defaultLoginFormName" class="form-control is-valid mb-5" name="name"
                                placeholder="Nombre" required>

                            <!-- value -->
                            <input type="number" id="defaultLoginFormPassword" name="value" class="form-control is-valid mb-5"
                                placeholder="Valor">
                            <!--reference-->
                            <input type="text" id="defaultLoginFormReference" name="reference" class="form-control is-valid mb-5"
                                placeholder="Referencia">
                            <!-- Sign in button -->
                            <button class="btn btn-info btn-block my-4" type="submit">Agregar producto</button>
                        </form>
                    </div>
                </div>
            </main>
        </div>
    </div>
